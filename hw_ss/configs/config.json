{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": false
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "SpexPlus",
    "args": {
      "num_spks": 2
    }
  },
  "data": {
    "train": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "limit": 10,
            "num_speakers": 2,
            "dataset_size": 100,
            "audio_len": 3
          }
        }
      ]
    },
    "val": {
      "batch_size": 10,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "limit": 10,
            "num_speakers": 2,
            "dataset_size": 100,
            "audio_len": 3
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3,
      "weight_decay": 1e-5
    }
  },
  "loss": {
    "type": "SpexLoss",
    "args": {}
  },
  "metrics": [],
  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "min_lr": 0,
      "factor": 0.5,
      "patience": 2
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 6,
    "visualize": "wandb",
    "wandb_project": "speech_separation_project",
    "grad_norm_clip": 10
  }
}
